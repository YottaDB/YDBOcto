# This file mirrors the pipeline set-up, but is not used by the
# pipeline. It lets you run the pipeline tests locally.
# If you change .gitlab-ci.yml, update this as well.
#
# Insturctions:
# docker run --name mysql -e MYSQL_ROOT_PASSWORD=ydbrocks -d mysql:8.0
# docker build -f Dockerfile-Tests.rocky -t tests-rocky .
# docker run -it --link mysql --rm tests-rocky
# docker kill mysql; docker rm mysql
# No autoupgrade command example here as we don't fully support it with Rocky Linux

FROM yottadb/yottadb-rocky-base:latest-master

# Yum update and packages
RUN yum update -y  && \
    yum clean all && \
    rm -rf /var/cache/yum/* && \
    yum --enablerepo=powertools install -y libcmocka-devel gcc libasan make clang clang-tools-extra cmake bison flex python2 python3 python3-pip readline-devel git libconfig-devel openssl-devel postgresql postgresql-server libgcrypt-devel gpgme-devel openssl expect java-11-openjdk-devel unzip unixODBC postgresql-odbc diffutils pkg-config libicu-devel glibc-langpack-en wget vim mysql-server mysql xz curl

# Ninja
RUN wget https://github.com/ninja-build/ninja/releases/download/v1.10.2/ninja-linux.zip && unzip ninja-linux.zip && mv ninja /usr/local/bin/ninja

# Shellcheck
RUN curl -LOf https://github.com/koalaman/shellcheck/releases/download/v0.7.2/shellcheck-v0.7.2.linux.x86_64.tar.xz && tar -C /usr/local/bin/ -xf shellcheck-v0.7.2.linux.x86_64.tar.xz --no-anchored 'shellcheck' --strip=1

# Go
ENV PATH=/usr/local/go/bin:$PATH
ENV GOLANG_VERSION=1.13.1
ENV USER=root
RUN wget -O go.tgz -q https://golang.org/dl/go${GOLANG_VERSION}.linux-amd64.tar.gz
RUN tar -C /usr/local -xzf go.tgz
RUN rm go.tgz
RUN go version

# Java
ENV JDBC_VERSION=42.2.6

ADD . /builds/YDBDBMS/
WORKDIR /builds/YDBDBMS

ENTRYPOINT ["tools/ci/build.sh"]
CMD ["make-rocky", "none"]
