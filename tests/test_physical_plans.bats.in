@test "TPP05 : OCTO543 : Test scenario where _ydbocotoX*.m exists but corresponding xref plan gvn does not exist" {
  echo "# Run TPP01.sql that generates M xref routine and stores corresponding xref plan related gvn in database" >> output.txt
  octo -f @PROJECT_SOURCE_DIR@/tests/fixtures/TPP01.sql >> output.txt 2>&1
  echo "# KILL ^%ydboctoxref but keep _ydboctoX*.{m,o} intact to create out-of-sync situation" >> output.txt
  yottadb -run %XCMD 'kill ^%ydboctoxref' 2>&1 | tee -a output.txt
  echo "# Run TPP01.sql again. Should return NO rows (incorrect result) because ^%ydboctoxref was killed" >> output.txt
  octo -f @PROJECT_SOURCE_DIR@/tests/fixtures/TPP01.sql >> output.txt 2>&1
  echo "# Verify ^%ydboctoxref was NOT rebuilt. Running [ZWRITE ^%ydboctoxref]. Output below" >> output.txt
  yottadb -run %XCMD 'zwrite ^%ydboctoxref' 2>&1 | tee -a output.txt
  verify_output TPP05 output.txt
}

