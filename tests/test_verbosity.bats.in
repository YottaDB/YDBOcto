@test "TV008 : octo correctly outputs config file syntax errors" {
	cat <<OCTO &> octo.conf
verbosity = "ERROR"
abcd
OCTO
	octo <<OCTO 2>&1 | tee output.txt
exit
OCTO
	verify_output TV008 output.txt
}

@test "TV009 : octo correctly outputs the names of configuration files containing errors" {
	cat <<OCTO &> ~/octo.conf
OCTO
	cat <<OCTO &> octo.conf
verbosity = "ABCD"
OCTO
	octo <<OCTO 2>&1 | tee output.txt
exit
OCTO
	rm -f ~/octo.conf		# Don't pollute the home directory of development/test environment
	verify_output TV009 output.txt
}

